                            <td>21/05/2000</td>
                            <td>Bình Gold</td>
                            <td>Bình Gold</td>
                            <td>binhgold@gmail.com</td>
                            <td>123123123</td>
                            <td class="text-right">
                                <a href="~/employee/edit/123" class="btn btn-xs btn btn-flat btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/employee/delete/123" class="btn btn-xs btn btn-flat btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="container-fluid">
            <div class="text-center">
                <ul class="pagination">
