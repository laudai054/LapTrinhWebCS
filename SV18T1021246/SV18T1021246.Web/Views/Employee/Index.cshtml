@{
    ViewBag.Title = "Nhân viên";
}
<!-- Default box -->
<div class="box" style="">
    <form action="#" method="get">
        <div class="input-group">
            <input type="text" name="searchValue"
                   class="form-control"
                   placeholder="Nhập tên hoặc địa chỉ khách hàng cần tìm...">
            <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/employee/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                    <i class="fa fa-plus"></i>Bổ sung
